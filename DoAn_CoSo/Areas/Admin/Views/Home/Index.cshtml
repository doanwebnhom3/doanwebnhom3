@model PagedList.IPagedList<DoAn_CoSo.Models.Sanpham>

@using PagedList.Mvc;


@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<h2>Quản lý sản phẩm </h2>

<p>
    <button class="btn-default">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên sách
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Thể loại
        </th>
        <th>
            Tác giả
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Tên loại
        </th>
        <th> Tên nhà xuất bản</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Tensach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Giatien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soluong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Theloai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tacgia)
            </td>
            <td>
                <img src="@Url.Content("~/HinhanhSP/" +item.Hinhanh)" width="50" height="50" />
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nhaxuatban.Tennxb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Loaisach.Tenloai)
            </td>

            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Masach })|
                @Html.ActionLink("Chi tiết", "Details", new { id = item.Masach }) |
                @Html.ActionLink("Xoá", "Delete", new { id = item.Masach })
            </td>
        </tr>
}

</table>
<!-- Thêm mã phân trang -->
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
            new { page }))

    <!-- Kết thúc -->